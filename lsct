#!/bin/bash

DISTRO=""
PKG_MGR=""
INSTALL=""
DEPENDS="git"
PKG_LIST="https://github.com/zilencers/lsct-pkgs"
DISPLAY_NAME=()
DESC=()
PKG_NAME=()
GIT=()
LSCT_PKG=()
LSCT_PKG_DIR="lsct-pkgs"

get_distro() {
    if [ -f /etc/arch-release ] ; then
        DISTRO="arch"
        PKG_MGR="pacman"
	INSTALL="-S"
    elif [ -f /etc/debian-version ] ; then
        DISTRO="debian"
	PKG_MGR="apt"
	INSTALL="install"
    elif [ -f /etc/redhat-release ] ; then
	DISTRO="redhat"
	PKG_MGR="yum"
	INSTALL="install"
    fi
}

dependency_check() {
    local dependencies=$(which git)

    if [ ! $dependencies ] ; then
        echo "Installing Dependencies..."
	$PKG_MGR $INSTALL $DEPENDS
    fi    
}

get_pkg_list() {
    echo "Getting available packages..."
    
    if [ -d lsct-pkgs ] ; then
        rm -r $LSCT_PKG_DIR
    fi

    git clone $PKG_LIST
}

read_pkg_list() {
    echo "Reading packages..."
    local file="lsct-pkgs/pkg.list"

    DISPLAY_NAME+=($(grep -i name $file | cut -d "=" -f 2))
    DESC+=($(grep -i desc $file | cut -d "=" -f 2))
    GIT+=($(grep -i git $file | cut -d "=" -f 2))
    LSCT_PKG+=($(grep -i lsct_pkg $file | cut -d "=" -f 2))

    if [ "$DISTRO" == "arch" ] ; then
        PKG_NAME+=($(grep -i arch_pkg $file | cut -d "=" -f 2))
    elif [ "$DISTRO" == "debian"  ] ; then
        PKG_NAME+=($(grep -i deb_pkg $file | cut -d "=" -f 2))
    elif [ "$DISTRO" == "redhat" ] ; then
        PKG_NAME+=($(grep -i redhat_pkg $file | cut -d "=" -f 2))
    fi
}

get_package() {
    if [ $1 == $2 ] ; then
        exit 0
    fi

    mkdir packages
    cd packages
    git clone ${GIT[$1-1]}
    cd ..
    execute ${LSCT_PKG[$1-1]}
}

execute() {
    echo "Executing package: $1"
    chmod 750 packages/$1/setup.sh
    read

    packages/$1/setup.sh $PKG_MGR $INSTALL $PKG_NAME
    menu
}

menu() {
    #clear
    echo "------------------------------------------------" 
    echo "        Linux Server Configuration Tool"
    echo "                   Main Menu"
    echo "------------------------------------------------"
    echo ""
    echo "Please choose an option:"

    j=1
    for ((i=0; i < ${#DISPLAY_NAME[@]}; i++ ))
    do
	printf "$j) ${DISPLAY_NAME[$i]}:	${DESC[$i]}" | sed 's/|/ /g' | column -t -s ':' 
	((j++))
    done
    echo "$j) Quit"

    printf "Option: "
    read OPTION
    
    get_package $OPTION $j
}

main() {
    get_distro
    dependency_check
    get_pkg_list
    read_pkg_list
    menu
}

main
